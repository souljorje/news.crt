.navbar
	margin-bottom 0
.navbar-brand
	display none
.container .navbar-collapse
	margin-left -15px
	margin-right -15px

.header
	background-color #fff
	overflow hidden
	&__block
		width 100%
		display flex
		justify-content space-between
		align-items center
	&-nav
		position relative
		&:after
			gray-line()
		&__nav
			display flex
			justify-content space-between
			width 28.97%
			list-style-type none
		&__list
			font(0.875, regular)
		&__link
			color gray
			&:hover, &:focus
				color purple
		&__map
			padding 20px 0
			margin-left -5.5%
			position relative
			transition 0.5s ease all
			cursor pointer
			figure
				display flex
			svg
				height 20px
				stroke purple
			figcaption
				font(0.875, medium)
				margin 0 8px 0 15px
				letter-spacing 0.4px
				color purple
			&:after
				content ''
				position absolute
				bottom -7px
				z-index 2
				left -10px
				right 0
				width 300px
				height 8px
				border-top solid 1px #0afcba
				^[-1]:hover:after
					background-image url('../../images/icons/triangle.png')
					background-repeat no-repeat
					background-position center


		&__social
			width 23.8%
		/.social
			display flex
			list-style-type none
			justify-content space-between
			align-items center
			&__link
				display flex
				align-items center
			&__item
				svg
					fill gray
					^[-1]^[-1]_vk svg
						height 11px
						&:hover
							fill #45668e
					^[-1]^[-1]_google svg
						height 14px
						&:hover
							fill #dd4b39
					^[-1]^[-1]_youtube svg
						height 12px
						&:hover
							fill #bb0000
					^[-1]^[-1]_instagram svg
						height 16px
						.gradient
							display none
						&:hover
							.gradient
								display block
					^[-1]^[-1]_fb svg
						height 16px
						&:hover
							fill #3b5998
					^[-1]^[-1]_ok svg
						height 17px
						&:hover
							fill #ff8400
					^[-1]^[-1]_twitter svg
						height 13px
						&:hover
							fill #00aced
					^[-1]^[-1]_test svg
						height 16px

	&-logo
		padding 32px 0 27px
		&__help
			display flex
			width 200px
			justify-content space-between
			font(0.75,bold)
		&__link
			text-align center
			color #000
			&:hover, &:focus
				color purple
				svg
					stroke purple
			svg
				stroke #000
				^[-1]^[-1]_search svg
					height 30px
				^[-1]^[-1]_eye svg
					height 34px
				^[-1]^[-1]_signin svg
					height 34px
				^[-1]^[-1]_signup svg
					height 34px
			figcaption
				text-transform uppercase
				margin-top 12px

		&__brand
			svg
				fill #262053
				height 69px

	&-menu
		padding 20px 0 22px
		display flex
		justify-content center
		position relative
		&:before
			gray-line()
			top 0
		&__menu
			display flex
			justify-content space-between
			list-style-type none
			width 100%
			max-width 770px
		&__link
			font(1,bold)
			letter-spacing 0.4px
			text-transform uppercase
			color #000
			&:hover, &:focus
				color purple

	&-mobile
		display none