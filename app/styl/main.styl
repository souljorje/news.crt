@import 'include/vars'
@import 'include/mixins'

//Normalize
normalize-html5()

ul
	padding-left 0
	margin 0
//Global-styles

body
	background-color #f9f9fa
	font-size 16px

h1
	font(2.25, regular)

h2
	font(1.875,regular)

svg
	fill none
//header styles
.navbar
	margin-bottom 0
.navbar-brand
	display none
.container .navbar-collapse
	margin-left -15px
	margin-right -15px

.header
	min-height 260px
	background-color #fff
	overflow hidden
	&__block
		width 100%
		display flex
		justify-content space-between
		align-items center
	&-nav
		padding 19px 0
		position relative
		&:after
			content:''
			height 1px
			width 9999px
			background-color #edeef0
			position absolute
			bottom 0
			left -1000px
		&__nav
			display flex
			justify-content space-between
			width 28.97%
			list-style-type none
		&__list
			font(0.875, regular)
		&__link
			color gray
			&:hover, &:focus
				text-decoration none
				color purple
		&__map
			margin-left -5.5%
			figure
				display flex
			svg
				height 20px
				stroke purple
			figcaption
				font(0.875, medium)
				margin 0 8px 0 15px
				letter-spacing 0.4px
				color purple

		&__social
			width 23.8%
		/.social
			display flex
			list-style-type none
			justify-content space-between
			align-items center
			&__link
				display flex
				align-items center
			&__item
				svg
					fill gray
					^[-1]^[-1]_vk svg
						height 11px
						&:hover
							fill #45668e
					^[-1]^[-1]_google svg
						height 14px
						&:hover
							fill #dd4b39
					^[-1]^[-1]_youtube svg
						height 12px
						&:hover
							fill #bb0000
					^[-1]^[-1]_instagram svg
						height 16px
					^[-1]^[-1]_fb svg
						height 16px
						&:hover
							fill #3b5998
					^[-1]^[-1]_ok svg
						height 17px
						&:hover
							fill #ff8400
					^[-1]^[-1]_twitter svg
						height 13px
						&:hover
							fill #00aced
					^[-1]^[-1]_test svg
						height 13px
	&-logo
		padding 32px 0 23px
		&__help
			display flex
			width 200px
			justify-content space-between
			font(0.75,bold)
		&__link
			text-align center
			color #000
			&:hover, &:focus
				text-decoration none
				color purple
				svg
					stroke purple
			svg
				stroke #000
				^[-1]^[-1]_search svg
					height 30px
				^[-1]^[-1]_eye svg
					height 34px
				^[-1]^[-1]_signin svg
					height 34px
				^[-1]^[-1]_signup svg
					height 34px

		&__brand
			svg
				height 69px

	&-menu
		padding 20px 0
		display flex
		justify-content center
		position relative
		&:before
			content:''
			height 1px
			width 9999px
			background-color #edeef0
			position absolute
			top 0
			left -1000px
		&__menu
			display flex
			justify-content space-between
			list-style-type none
			width 100%
			max-width 770px
		&__list
			font(1,bold)
		&__link
			color #000
			&:hover, &:focus
				text-decoration none
				color #000

	&-mobile
		display none



@import 'include/media.styl'